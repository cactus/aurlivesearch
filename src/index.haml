!!!
%html
  %head
    %meta(name="robots" content="noindex,nofollow")
    %link(href="/static/blueprint/screen.css" rel="stylesheet" 
          type="text/css" media="screen, projection")
    %link(href="/static/blueprint/print.css" rel="stylesheet" 
          type="text/css" media="print")
    /[if IE]
      %link(href="/static/blueprint/ie.css" rel="stylesheet" 
            type="text/css" media="screen, projection")
    %link(href="/compiled/screen.0.4.css" rel="stylesheet" type="text/css")
    %script#packages_tpl(type="text/html")
      {{#packages}}{{#pkg}}
      %tr
        %td
          %a(href="http://aur.archlinux.org/packages.php?ID={{ID}}") {{ID}}
        %td
          %a(href="{{URL}}") {{Name}}
        %td(class="outofdate-{{OutOfDate}}") {{Version}}
        %td {{NumVotes}}
        %td
          %a(href="http://aur.archlinux.org{{URLPath}}") tarball
        %td {{Description}}
      {{/pkg}}{{/packages}}
    %script#error_tpl(type="text/html")
      %div 
        {{short_msg}}
        {{#long_msg}}
        %br
        {{long_msg}}
        {{/long_msg}}
  %body
    .container
      .span-9
        results:
        %span#result-count 0
      #searchform.span-6
        .span-5
          %form
            %label(for="q") Search
            %input#q(name="q" tabindex="1"type="text")
        #ajax-loading.span-1.last
          %img(src="/static/ajax-loader.gif" width="16" height="16")
      #links.span-9.last
        .quiet 
          v.0.4 .::. 
          %a(href="https://github.com/cactus/aurlivesearch") about
      %hr.space
      #response.span-24.last
        %table
          %thead
            %tr
              %th ID
              %th Name
              %th Version
              %th Votes
              %th Tarball
              %th Description
          %tbody#results
      #footer.error.span-24.last
    %script(src="http://ajax.googleapis.com/ajax/libs/jquery/1.5.0/jquery.min.js" type="text/javascript")
    %script(src="/static/ICanHaz.min.js" type="text/javascript")
    %script(src="/compiled/search.0.4.js" type="text/javascript")
